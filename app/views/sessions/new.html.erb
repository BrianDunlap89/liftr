<h1>User Login</h1>

<% if flash[:notice] %>
            <h4><div class="notice"><%= flash[:notice] %></div></h4>
        <% end %>

<%= form_tag(login_path) do %>

    <div class="login-field">
        <%= label_tag "Email: " %>
        <%= text_field_tag :email %>
    </div>

    <div class="login-field">
        <%= label_tag "Password: " %>
        <%= password_field_tag :password %>
    </div>

<div class="loginbutton">
    <%= submit_tag "Login" %>
</div>
<% end %>