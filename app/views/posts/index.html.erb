<h1>Liftr</h1>
<h2>The Back Page of the Internet</h2>

<ul class="posts">
    <% @posts.each do |post| %>
        <li class="post">
          <a href="<%= post.link %>"><%= post.title %></a>
          <ul class="options">
            <li class="comment-count">
              <% if post.comments.find_by(post_id: post.id) %>
                <%= link_to "#{post.comments.find_by(post_id: post.id).count} Comments", comments_show_path %>
              <% else %>
              "0 Comments"
              <% end %>
            </li>
            <li class=>
              <% if current_user.posts.find_by(id: post.id) %>
                <%= link_to "Edit Post", edit_path(post) %>
              <% end %>
            <li class="time-submitted">
              <span>
                Submitted <%= distance_of_time_in_words post.created_at, post.updated_at %>ago by <%= current_user.username %>
              </span>
            </li>
          </ul>
        </li>
    <% end %>
</ul>

<div class="posts-nav">
  <%= paginate @posts %>
  <%= link_to "Add a new Post!", post_new_path %>
</div>